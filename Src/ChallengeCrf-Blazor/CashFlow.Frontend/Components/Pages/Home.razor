@page "/"
@inject CashFlowClient Client;
@attribute [StreamRendering]

<PageTitle>Cash Flow</PageTitle>

<div class="mt-2">
    <a class="btn btn-primary" role="button" href="/editcash">New Entry</a>
</div>

@if (cashes is null) 
{
    <p><em>Loading...</em></p>
}
else{
    <table class="table table-striped table-bordered table-hover mt-3">
        <thead class="table-dark">
            <th>Id</th>
            <th>Description</th>
            <th>Entry</th>
            <th class="text-end">Amount</th>
            <th>Date</th>
            <th></th>
        </thead>
        <tbody>
            @foreach(var cash in cashes){
                <tr>
                    <td>@cash.cashFlowId</td>
                    <td>@cash.description</td>
                    <td>@cash.entry</td>
                    <td class="text-end">@cash.amount.ToString("C2")</td>
                    <td>@cash.date</td>
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-primary me-2" role="button" href="@CashUrl(cash.cashFlowId)">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@GetDeleteModalId(cash)">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                        <DeleteCash Game="@cash" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@code
{
    private CashFlowSummary[]? cashes;

    protected override async Task OnInitializedAsync()
    {
        cashes = await  Client.GetCashFlowAsync();
    }

    private static string CashUrl(string id) => $"/api/cashflow/{id}";

    private string GetDeleteModalId(CashFlowSummary cash)
    {
        return $"#{DeleteCash.GetModalId(cash)}";
    }
    

    

}