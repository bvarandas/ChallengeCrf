@inject CashFlowClient Client
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="modal fade" id="@GetModalId(Cash)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">@title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal" @onclick="@ConfirmAsync">Delete</button>
      </div>
    </div>
  </div>
</div>

@code {
    [Parameter]
    public CashFlowSummary? Cash { get; set;}
    private string title  = string.Empty;

    protected override void OnParametersSet()
    {
        title = $"Delete {Cash?.description}?";
    }
    public static string GetModalId(CashFlowSummary? cash)
    {
        ArgumentNullException.ThrowIfNull(cash);
        return $"deleteModal-{cash.cashFlowId}";
    }

    private async Task ConfirmAsync()
    {
        await Client.DeleteCashFlowAsync(Cash!.cashFlowId);
        NavigationManager.Refresh();
    }    


}
