
@page "/cashlist"
@inject CashFlowClient Client;
@inject NavigationManager NavManager

@using Microsoft.AspNetCore.SignalR.Client
 @attribute [StreamRendering] 

<PageTitle>Cash Flow</PageTitle>

<div class="mt-2">
    @* <a class="btn btn-primary" role="button" href="/editcash">New Entry</a> *@
    <button class="btn btn-primary" role="button" @onclick="NavigateToEditcash">New Entry</button>
    
</div>

@if (cashes is null) 
{
    <p><em>Loading...</em></p>
}
else{
    <table class="table table-striped table-bordered table-hover mt-3" >
        <thead class="table-dark">
            <th>Id</th>
            <th>Description</th>
            <th>Entry</th>
            <th class="text-end">Amount</th>
            <th>Date</th>
            <th></th>
        </thead>
        <tbody>
            @foreach(var cash in cashes){
                <tr>
                    <td>@cash.cashFlowId</td>
                    <td>@cash.description</td>
                    <td>@cash.entry</td>
                    <td class="text-end">@cash.amount.ToString("C2")</td>
                    <td>@cash.date</td>
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-primary me-2" role="button" href="@CashUrl(cash.cashFlowId)">
                                <span class="oi oi-pencil"></span>
                            </a>
                            @* <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@GetDeleteModalId(cash)">
                                <span class="oi oi-x"></span>
                            </button>  *@
                            <button class="btn btn-danger" data-bs-toggle="modal" @onclick="(()=>DeleteCashFlow(cash.cashFlowId))">
                                <span class="oi oi-x"></span>
                            </button> 
                        </div>
                        <DeleteCash Cash="@cash" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@code
{
    private HubConnection? hubConnection;

    private CashFlowSummary[]? cashes;

    private void NavigateToEditcash()
    {
        NavManager.NavigateTo("/editcash", true);
    }

    protected override async Task OnInitializedAsync()
    {
        //cashes = await  Client.GetCashFlowAsync();

        hubConnection = new HubConnectionBuilder()
            .WithUrl(NavManager.ToAbsoluteUri("http://localhost:9010/hubs/brokerhub"))
            .Build();

        hubConnection.On<CashFlowSummary[]>("ReceiveMessageCF", (CashFlowSummary[] data) =>
        {
            cashes = data;
            InvokeAsync(StateHasChanged);
        });

        await hubConnection.StartAsync().ContinueWith((h) =>
        {
            hubConnection.SendAsync("ConnectToMessageBroker");
        });
    }

    public bool IsConnected =>
        hubConnection?.State == HubConnectionState.Connected;

    private static string CashUrl(string id) => $"editcash/{id}";

    private string GetDeleteModalId(CashFlowSummary cash)
    {
        return $"#{DeleteCash.GetModalId(cash)}";
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }

    public async Task DeleteCashFlow(string cashFlowId)
    {
        await Client.DeleteCashFlowAsync(cashFlowId);
    }
}